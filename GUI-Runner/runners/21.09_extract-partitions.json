{
  "name": "21.09-Khmer: Extract-partitions",
  "script_path": "conf/scripts/extract-partitions.sh",
  "description": "Separate sequences that are annotated with partitions into grouped files",
  "working_directory": "./",
  "parameters": [
    {
      "name": "Output prefix",
      "description": "Output filename prefix"
    },
    {
      "name": "Input partition",
      "type": "file_upload",
      "description": "Input partition filename"
    },
    {
      "name": "Max size",
      "param": "-X",
      "description": "Max group size (n sequences)"
    },
    {
      "name": "Min size",
      "param": "-m",
      "description": "Minimum partition size worth keeping"
    },
    {
      "name": "Other parameters",
      "description": "Other parameters"
    },
    {
      "name": "No output groups",
      "param": "-n",
      "description": "Do not actually output groups files",
      "no_value": true,
      "default": false
    },
    {
      "name": "Output unassigned",
      "param": "-U",
      "description": "Output unassigned sequences, too",
      "no_value": true,
      "default": false
    },
    {
      "name": "Gzip",
      "param": "--gzip",
      "description": "Compress output using gzip",
      "no_value": true,
      "default": false
    },
    {
      "name": "Bzip",
      "param": "--bzip",
      "description": "Compress output using bzip2",
      "no_value": true,
      "default": false
    },
    {
      "name": "Help",
      "param": "-h",
      "description": "Helpful help screen",
      "no_value": true,
      "default": false
    }
  ]
}
